const {} = Astro.props;

import Accordion from './Accordion.astro';
import Dropdown from './Dropdown.astro';


---

<header>
    <Accordion 
        title="Menu" 
        details="Home\nContact" 
        link="/\n/contact" 
    >

        <Dropdown 
            title="Contact Options" 
            items={["Email", "Social"]}
            links={['/contact/email']} 
        />
