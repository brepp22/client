---
interface Props {
	title: string;
	description?: string;
	image?: string
}

const { title, 
	description = "Beighley's Portfolio Site",
 	image = "/images/portfolio.jpg" } = Astro.props;

import Nav from '../components/Nav.astro';

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property:"og:img" content={image}/>
		<title>{title}</title>
	</head>
	<body class="min-h-screen">
		<Nav />
		<div class="flex justify-end px-4 py-2  bg-slate-900 text-white dark:bg-slate-400 dark:text-black transition-colors">
			<button
				id="theme-toggle"
				class="p-2 rounded bg-slate-900 text-white dark:bg-slate-400 dark:text-black transition-colors font-mono"
				aria-label="Toggle Theme"
			>
				Toggle Theme
			</button>
		</div>
		<slot />
	</body>

	<script>
	document.addEventListener('DOMContentLoaded', () => {
    const html = document.documentElement;

    // Apply stored theme on page load
    const storedTheme = localStorage.getItem('theme');
    if (storedTheme === 'dark') {
        html.classList.add('dark');
    } else {
        html.classList.remove('dark');
    }

    // Toggle theme on button click
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
        const isDark = html.classList.contains('dark');
        if (isDark) {
            html.classList.remove('dark');
            localStorage.setItem('theme', 'light');
        } else {
            html.classList.add('dark');
            localStorage.setItem('theme', 'dark');
        }
    });
});
	</script>
</html>
